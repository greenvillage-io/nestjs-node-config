{
    "name": "nestjs-node-config",
    "version": "0.0.2",
    "description": "The nestjs node-config package",
    "author": "Alex Hermann <alex.hermann@pop-code.com>",
    "repository": "https://github.com/Pop-Code/nestjs-node-config",
    "main": "dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "rm -Rf ./dist && tsc",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "test:ci": "jest --runInBand",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "dependencies": {
        "config": "3.3.1"
    },
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7"
    },
    "devDependencies": {
        "@nestjs/core": "7.0.9",
        "@nestjs/common": "7.0.9",
        "@nestjs/testing": "7.0.9",
        "@types/jest": "25.2.1",
        "prettier": "2.0.5",
        "codecov": "3.6.5",
        "jest": "25.5.4",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.5",
        "ts-jest": "25.4.0",
        "ts-node": "8.10.1",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.17.6",
        "typescript": "3.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts}",
            "!index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "../coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
